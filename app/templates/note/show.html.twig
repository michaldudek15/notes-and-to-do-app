{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.note_details'|trans({'%id%': note.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.note_details'|trans({'%id%': note.id|default('')}) }}</h1>
    {% if note is defined and note|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.id'|trans }}</dt>
            <dd>{{ note.id }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ note.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.updated_at'|trans }}</dt>
            <dd>{{ note.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label.title'|trans }}</dt>
            <dd>{{ note.title }}</dd>
            <dt>{{ 'label.content'|trans }}</dt>
            <dd>{{ note.content }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{ note.category.title }}</dd>
            <dt>{{ 'label.author'|trans }}</dt>
            <dd>{{ note.author.email }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>
                {% for tag in note.tags %}
                    {{ tag.title }}{% if not loop.last %},{% endif %}
                {% endfor %}
            </dd>

        </dl>
        <p class="mt-5">
            <a class="btn btn-primary" href="{{ url('note_edit', {id: note.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}
            </a>
            <a class="btn btn-danger" href="{{ url('note_delete', {id: note.id}) }}"
               title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}
            </a>
        </p>
        <p>
            <a href="{{ url('note_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}